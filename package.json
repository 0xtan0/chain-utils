{
    "name": "0xtan0/chain-utils",
    "version": "0.0.1",
    "private": true,
    "description": "Chain utils based on viem by 0xtan0",
    "homepage": "https://github.com/0xtan0/chain-utils#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/0xtan0/chain-utils.git"
    },
    "license": "MIT",
    "author": "0xtan0",
    "type": "module",
    "scripts": {
        "build": "turbo run build",
        "changeset": "changeset",
        "changeset:publish": "changeset publish",
        "changeset:version": "changeset version",
        "check-types": "turbo run check-types",
        "clean": "turbo run clean",
        "create-package": "./create-package.sh",
        "dev": "turbo run dev",
        "env:prebuild": "turbo run env:prebuild",
        "format": "turbo run format",
        "format:fix": "turbo run format:fix",
        "preinstall": "npx only-allow pnpm",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "prepare": "husky && chmod +x ./create-package.sh",
        "start": "turbo run start",
        "test": "turbo run test",
        "test:cov": "turbo run test:cov",
        "test:integration": "turbo run test:integration"
    },
    "lint-staged": {
        "*": [
            "prettier --write --ignore-unknown"
        ],
        "*.js,*.ts,*.json": "eslint --fix",
        "package.json": "sort-package-json"
    },
    "dependencies": {
        "viem": "2.45.1"
    },
    "devDependencies": {
        "@changesets/cli": "2.29.8",
        "@commitlint/config-conventional": "19.4.1",
        "@ianvs/prettier-plugin-sort-imports": "4.3.1",
        "@types/node": "20.3.1",
        "@typescript-eslint/eslint-plugin": "7.18.0",
        "@typescript-eslint/parser": "7.18.0",
        "@vitest/coverage-v8": "2.0.5",
        "commitlint": "19.4.1",
        "eslint": "8.56.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-prettier": "5.2.1",
        "husky": "9.1.5",
        "lint-staged": "15.2.10",
        "prettier": "3.3.3",
        "sort-package-json": "2.10.1",
        "turbo": "2.1.1",
        "typescript": "5.5.4",
        "vitest": "2.0.5"
    },
    "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264",
    "engines": {
        "node": "22"
    }
}
